extends layout

block content

  h1.container.mt-4.title #{title} 
  ul.list-group.mt-4
    each fruit, i in fruits 
      li.container.list-group-item 
        a.style(style='font-size:40px; font-weight:bold;')(href="/admin/view/"+fruit._id)=fruit.name        
          a.btn.btn-danger.btn-right(href='/admin/delete/'+fruit._id, onclick="return confirm('Are you sure?')") Delete
          a.btn.btn-success.btn-right.mx-3(href='/admin/edit/'+fruit._id) Edit

